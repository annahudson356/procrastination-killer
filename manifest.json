{
  "name": "Procrastination Killer for Canvas",
  "description": "Locally adjust how Canvas due dates look in your browser.",
  "version": "0.1",
  "manifest_version": 3,
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.instructure.com/*",
    "https://*.canvas.*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.instructure.com/*",
        "https://*.canvas.*/*"
      ],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/calendar.png"
  }
}
